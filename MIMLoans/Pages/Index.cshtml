@page

@model IndexModel

@{
    ViewData["Title"] = "Take a Loan";
    var flash = TempData["Flash"]?.ToString();
}

<div class="text-center">
    <h1 class="display-4">Take loans of up to NGN50,000</h1>
</div>
<br />
<div class="row justify-content-md-center">
    <div class="col-md-6 col-sm-12">
        <form method="post" class="row g-3">
            @if (!string.IsNullOrEmpty(flash))
            {
                <div class="alert alert-danger col-12" role="alert">
                    @flash
                </div>
            }
            <div class="col-12">
                <label asp-for="Customer.Fullname" class="form-label">Full Name</label>
                <input type="text" class="form-control" asp-for="Customer.Fullname" minlength="2" maxlength="20" placeholder="Enter your full name" required>
            </div>
            <div class="col-12">
                <label asp-for="Customer.Address" class="form-label">Address</label>
                <textarea class="form-control" asp-for="Customer.Address" rows="3" required></textarea>
            </div>
            <div class="col-12">
                <label asp-for="Customer.DateOfBirthUtc" class="col-form-label">Date of Birth</label>
                <div class="input-group date" id="datepicker">
                    <input type="text" class="form-control" asp-for="Customer.DateOfBirthUtc" asp-format="{0:MM/dd/yyyy}" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-12">
                <label asp-for="Customer.EmailAddress" class="form-label">Email address</label>
                <input type="email" class="form-control" asp-for="Customer.EmailAddress" placeholder="Enter Email Address" required>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" asp-for="Customer.HomeOwner">
                    <label class="form-check-label" asp-for="Customer.HomeOwner">
                        Home Owner?
                    </label>
                </div>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="LoanAmount">Loan Amount</label>
                <div class="range">
                    <input type="range" class="form-range" min="20000" max="50000" step="5000" asp-for="LoanAmount" required />
                </div>
            </div>
            <div class="col-12">
                <input type="submit" class="btn btn-primary" value="Take Loan" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#Customer_DateOfBirthUtc').datepicker({ format: "dd/mm/yyyy" });
        });
    </script>
}
